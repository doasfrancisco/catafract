{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "aspen",
  "name": "Catafract",
  "seo": {
    "metatags": {
      "canonical": "https://docs.catafract.com"
    }
  },
  "colors": {
    "primary": "#ff73a8",
    "light": "#ff73a8",
    "dark": "#ff73a8"
  },
  "background": {
    "decoration": "gradient"
  },
  "favicon": "/favicon.svg",
  "fonts": {
    "heading": {
      "family": "Inter Display Bold",
      "source": "https://mintlify-assets.b-cdn.net/fonts/InterDisplay-Bold.woff2",
      "format": "woff2"
    }
  },
  "appearance": {
    "default": "system"
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Use Catafract",
        "href": "https://www.catafract.com",
        "primary": true
      }
    ]
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "styling": {
    "codeblocks": {
      "theme": {
        "light": "github-light",
        "dark": "dracula"
      }
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/doasfrancisco",
      "github": "https://github.com/doasfrancisco/catafract"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "icon": "map",
        "groups": [
          {
            "group": "Get Started",
            "icon": "terminal",
            "pages": [
              "index",
              "quickstart",
              "nodes"
            ]
          }
        ]
      }
    ]
  }
}